<Application 
    x:Class="TrainMeX.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TrainMeX"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    StartupUri="Windows/LauncherWindow.xaml"
    ShutdownMode="OnMainWindowClose">

    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Control" x:Key="BaseStyle">
                <Setter Property="FontFamily" Value="Inter, Segoe UI, Roboto, Helvetica, Arial, sans-serif"/>
            </Style>
            <Style TargetType="Control" BasedOn="{StaticResource BaseStyle}"/>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Inter, Segoe UI, Roboto, Helvetica, Arial, sans-serif"/>
            </Style>
            <!-- Color Resources - Deep Magenta & Midnight Palette -->
            <SolidColorBrush x:Key="BackgroundPrimary" Color="#0D0221"/> <!-- Deep Purple Black -->
            <SolidColorBrush x:Key="BackgroundSecondary" Color="#1A0B2E"/> <!-- Rich Purple -->
            <SolidColorBrush x:Key="BackgroundHeader" Color="#16213E"/> <!-- Dark Blue Purple -->
            <SolidColorBrush x:Key="AccentPrimary" Color="#FF006E"/> <!-- Vibrant Magenta -->
            <SolidColorBrush x:Key="AccentSecondary" Color="#FF1493"/> <!-- Hot Pink -->
            <SolidColorBrush x:Key="AccentHover" Color="#FF69B4"/> <!-- Bright Pink -->
            <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/> <!-- Pure White -->
            <SolidColorBrush x:Key="TextSecondary" Color="#FFD6F0"/> <!-- Light Pink -->
            <SolidColorBrush x:Key="TextTertiary" Color="#FFC9E3"/> <!-- Soft Pink -->
            <SolidColorBrush x:Key="BorderPink" Color="#FF006E"/> <!-- Vibrant Magenta -->
            <SolidColorBrush x:Key="ScrollbarThumb" Color="#55FF006E"/> <!-- Translucent Magenta -->
            <SolidColorBrush x:Key="ScrollbarThumbHover" Color="#AAFF006E"/> <!-- Bright Magenta -->
            <SolidColorBrush x:Key="SuccessColor" Color="#00F5A0"/> <!-- Neon Green -->
            <SolidColorBrush x:Key="WarningColor" Color="#FFB800"/> <!-- Vibrant Gold -->
            <SolidColorBrush x:Key="ErrorColor" Color="#FF0055"/> <!-- Neon Red -->

            <!-- Spacing System (8px base unit) -->
            <sys:Double x:Key="SpacingXSmall">4</sys:Double>
            <sys:Double x:Key="SpacingSmall">8</sys:Double>
            <sys:Double x:Key="SpacingMedium">16</sys:Double>
            <sys:Double x:Key="SpacingBase">24</sys:Double>
            <sys:Double x:Key="SpacingLarge">32</sys:Double>
            <sys:Double x:Key="SpacingXLarge">48</sys:Double>
            <sys:Double x:Key="SpacingXXLarge">64</sys:Double>
            <sys:Double x:Key="SpacingXXXLarge">80</sys:Double>
            
            <!-- Standard Control Dimensions -->
            <sys:Double x:Key="ButtonHeight">40</sys:Double>
            <sys:Double x:Key="InputHeight">40</sys:Double>
            <sys:Double x:Key="IconButtonSize">40</sys:Double>
            <Thickness x:Key="ButtonPadding">24,0</Thickness>
            <Thickness x:Key="PanelPadding">32</Thickness>
            <Thickness x:Key="SectionMargin">0,0,0,32</Thickness>
            <Thickness x:Key="ItemMargin">0,0,0,16</Thickness>

