<Window x:Class="TrainMeX.Windows.CalibrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HotScreen Calibration Pattern"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowState="Maximized"
        Loaded="Window_Loaded">
    <Grid>
        <!-- Calibration Pattern -->
        <Canvas x:Name="CalibrationCanvas" Background="#80000000">
            <!-- Center crosshair marker -->
            <Rectangle x:Name="CenterMarker" 
                       Width="100" Height="100"
                       Fill="#FFFF00FF"
                       Canvas.Left="860" Canvas.Top="440"
                       Stroke="White" StrokeThickness="2"/>
            
            <!-- Corner markers -->
            <Ellipse Width="50" Height="50" Fill="#FFFF00FF" 
                     Canvas.Left="100" Canvas.Top="100"/>
            <Ellipse Width="50" Height="50" Fill="#FFFF00FF" 
                     Canvas.Left="1770" Canvas.Top="100"/>
            <Ellipse Width="50" Height="50" Fill="#FFFF00FF" 
                     Canvas.Left="100" Canvas.Top="930"/>
            <Ellipse Width="50" Height="50" Fill="#FFFF00FF" 
                     Canvas.Left="1770" Canvas.Top="930"/>
            
            <!-- Instructions -->
            <TextBlock Canvas.Top="20" Canvas.Left="20"
                       Foreground="White" FontSize="24" FontWeight="Bold">
                <Run Text="HotScreen Calibration Pattern Active"/>
            </TextBlock>
            
            <TextBlock Canvas.Top="60" Canvas.Left="20"
                       Foreground="White" FontSize="16">
                <Run Text="1. Ensure HotScreen is running and detecting"/>
                <LineBreak/>
                <Run Text="2. Click 'Auto-Calibrate' button in HotScreen mod"/>
                <LineBreak/>
                <Run Text="3. Press ESC to close this window"/>
            </TextBlock>
        </Canvas>
    </Grid>
</Window>
