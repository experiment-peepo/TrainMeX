<Window x:Class="TrainMeX.Windows.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainMeX.Windows"
        xmlns:vm="clr-namespace:TrainMeX.ViewModels"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="TrainMeX Launcher" Width="600" Height="700" MinWidth="600" MinHeight="400"
        ResizeMode="CanResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent"
        Icon="pack://application:,,,/Images/icon.ico"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        >
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" 
                     ResizeBorderThickness="5" 
                     GlassFrameThickness="0" 
                     CornerRadius="0"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:PluralConverter x:Key="PluralConverter"/>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:StatusMessageTypeToBrushConverter x:Key="StatusMessageTypeToBrushConverter"/>
        <local:StatusMessageTypeToForegroundConverter x:Key="StatusMessageTypeToForegroundConverter"/>
        <local:ValidationStatusToBrushConverter x:Key="ValidationStatusToBrushConverter"/>
        <local:ValidationStatusToIconConverter x:Key="ValidationStatusToIconConverter"/>
        <local:ValidationStatusToOpacityConverter x:Key="ValidationStatusToOpacityConverter"/>
        <local:ValidationStatusToForegroundConverter x:Key="ValidationStatusToForegroundConverter"/>
        <local:OpacityToIntConverter x:Key="OpacityToIntConverter"/>
        <local:OpacityScaleConverter x:Key="OpacityScaleConverter"/>
        
        <Style x:Key="ActivePlayerButtonStyle" TargetType="Button" BasedOn="{StaticResource ControlButton}">
            <Setter Property="Foreground" Value="{StaticResource AccentPrimary}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentPrimary}"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MainActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BackgroundSecondary}"/>
            <Setter Property="BorderBrush" Value="#3D0A1F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="13"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3D0A1F"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#6D4F5F"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1A0510"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TrainingToggleButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButton}">
            <!-- Base State (Train Me) -->
            <Setter Property="Content" Value="▷  TRAIN ME!"/>
            <Setter Property="Background" Value="{StaticResource AccentPrimary}"/>
            <Setter Property="Command" Value="{Binding HypnotizeCommand}"/>
            <Setter Property="IsEnabled" Value="{Binding IsHypnotizeEnabled}"/>
            <Setter Property="ToolTip" Value="Start playing videos on assigned screens"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            
            <Style.Triggers>
                <!-- Active State (End Training) -->
                <DataTrigger Binding="{Binding HasActivePlayers}" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Content" Value="▢  End All Training"/>
                    <Setter Property="Command" Value="{Binding DehypnotizeCommand}"/>
                    <Setter Property="IsEnabled" Value="True"/>
                    <Setter Property="ToolTip" Value="Stop all video playback"/>
                </DataTrigger>
                
                <!-- Hover state for Active -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding HasActivePlayers}" Value="True"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="{StaticResource ErrorColor}"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border x:Name="MainBorder" 
            Background="{StaticResource BackgroundPrimary}" 
            BorderBrush="{StaticResource AccentPrimary}" 
            BorderThickness="2"
            CornerRadius="12"
            Padding="{StaticResource PanelPadding}">
        <Grid MouseLeftButtonDown="Window_MouseLeftButtonDown">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}" Value="Maximized">
                            <Setter Property="Margin" Value="{x:Static SystemParameters.WindowResizeBorderThickness}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- 0: Custom Title Bar -->
                <RowDefinition Height="Auto"/> <!-- 1: App Branding -->
                <RowDefinition Height="Auto"/> <!-- 2: URL Input -->
                <RowDefinition Height="Auto"/> <!-- 3: Actions Bar -->
                <RowDefinition Height="Auto"/> <!-- 4: Playlist Title -->
                <RowDefinition Height="*"/>    <!-- 5: Playlist List -->
                <RowDefinition Height="Auto"/> <!-- 6: Status & Active Sessions -->
                <RowDefinition Height="Auto"/> <!-- 7: Training Toggle -->
            </Grid.RowDefinitions>
        <!-- Header with gradient and rounded corners -->
        <!-- Custom Title Bar (Minimal) -->
        <Grid Grid.Row="0" Margin="0,0,0,24" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Opacity="0.5">
                <Image Source="pack://application:,,,/Images/icon.ico" Width="16" Height="16" Margin="0,0,8,0"/>
                <TextBlock Text="TrainMeX" Foreground="White" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Style="{StaticResource ControlButton}" Click="AboutButton_Click" Width="32" Height="32" ToolTip="About">
                    <TextBlock Text="i" FontSize="14" FontWeight="Bold"/>
                </Button>
                <Button Style="{StaticResource ControlButton}" Click="SettingsButton_Click" Width="32" Height="32" ToolTip="Settings">
                    <Path Data="{StaticResource Icon_Settings}" Fill="{StaticResource TextSecondary}" Stretch="Uniform" Width="14" Height="14"/>
                </Button>
                <Button Style="{StaticResource ControlButton}" Command="{Binding MinimizeCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="32" Height="32">
                    <Path Data="{StaticResource Icon_Minimize}" Fill="{StaticResource TextSecondary}" Stretch="Uniform" Width="10" Height="2"/>
                </Button>
                <Button Style="{StaticResource ControlButton}" Click="MaximizeButton_Click" Width="32" Height="32">
                    <Path Data="{StaticResource Icon_Maximize}" Fill="{StaticResource TextSecondary}" Stretch="Uniform" Width="10" Height="10"/>
                </Button>
                <Button Style="{StaticResource ControlButton}" Command="{Binding ExitCommand}" Width="40" Height="32" Background="{StaticResource ErrorColor}" Foreground="White">
                    <Path Data="{StaticResource Icon_Close}" Fill="White" Stretch="Uniform" Width="10" Height="10"/>
                </Button>
            </StackPanel>
        </Grid>
        
            <!-- Header Section -->
            <StackPanel Grid.Row="1" Margin="{StaticResource SectionMargin}">
                <Label Style="{StaticResource MainTitle}" HorizontalAlignment="Left" Margin="0,0,0,0">TRAINMEX</Label>
                <Label Style="{StaticResource LowerTitle}" Content="Simple Player Enhancement" HorizontalAlignment="Left" Margin="4,0,0,0" Opacity="0.7"/>
            </StackPanel>
            <!-- Input Area -->
            <Grid Grid.Row="2" Margin="{StaticResource SectionMargin}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="UrlTextBox" 
                         Style="{StaticResource PinkTextBoxStyle}" 
                         Height="{StaticResource InputHeight}"
                         VerticalContentAlignment="Center"
                         Margin="0,0,16,0"/>
                <Button Grid.Column="1" 
                        Content="Add URL" 
                        Style="{StaticResource MainButton}"
                        Click="AddUrl_Click"/>
            </Grid>
            <!-- Actions Bar -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="{StaticResource SectionMargin}">
                <Button Content="Browse Files" 
                        Style="{StaticResource MainButton}" 
                        Margin="0,0,16,0"
                        Click="BrowseFiles_Click"/>
                <Button Content="Import Playlist" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="ImportPlaylist_Click"/>
            </StackPanel>
        <Grid Margin="0,0,0,0" Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Style="{StaticResource LowerTitle}" Grid.Column="0" FontSize="15" FontWeight="SemiBold">Playlist</Label>
            <TextBlock Grid.Column="1" 
                      Foreground="{StaticResource TextSecondary}" 
                      FontSize="12" 
                      VerticalAlignment="Center" 
                      Margin="8,0,0,0"
                      TextAlignment="Left"
                      FontWeight="SemiBold">
                <TextBlock.Text>
                    <MultiBinding StringFormat="({0} {1})">
                        <Binding Path="AddedFiles.Count"/>
                        <Binding Path="AddedFiles.Count" Converter="{StaticResource PluralConverter}"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </Grid>
        
        <Grid Margin="0,8,0,0" Grid.Row="5" MinHeight="200">
            <Border Background="#FF000000" Opacity="0.2" CornerRadius="8"/>
            
            <ListView x:Name="AddedFilesList" 
                      ItemsSource="{Binding AddedFiles}" 
                      SelectionMode="Single" 
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      Background="Transparent"
                      BorderThickness="0"
                      AllowDrop="True"
                      PreviewMouseLeftButtonDown="AddedFilesList_PreviewMouseLeftButtonDown"
                      MouseMove="AddedFilesList_MouseMove"
                      Drop="AddedFilesList_Drop"
                      DragOver="AddedFilesList_DragOver"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling">
                
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource BackgroundSecondary}" CornerRadius="12" Margin="0,0,0,16" Padding="24">
                            <Border.BorderBrush>
                                <SolidColorBrush Color="#FF006E" Opacity="0.3"/>
                            </Border.BorderBrush>
                            <Border.BorderThickness>2</Border.BorderThickness>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Header Row -->
                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/> <!-- Icon -->
                                        <ColumnDefinition Width="*"/>    <!-- Title -->
                                        <ColumnDefinition Width="Auto"/> <!-- Screen -->
                                        <ColumnDefinition Width="Auto"/> <!-- Close -->
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Valid Icon -->
                                    <Path Data="M 0 5 L 4 9 L 10 1" 
                                          Stroke="{StaticResource SuccessColor}" 
                                          StrokeThickness="2" 
                                          VerticalAlignment="Center" 
                                          Margin="0,0,8,0"/>
                                          
                                    <!-- Title -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding FileName}" 
                                               Foreground="{StaticResource TextPrimary}" 
                                               FontWeight="SemiBold" 
                                               TextTrimming="CharacterEllipsis" 
                                               VerticalAlignment="Center"
                                               ToolTip="{Binding FilePath}"/>
                                               
                                    <!-- Screen Selector -->
                                    <ComboBox Grid.Column="2" 
                                              ItemsSource="{Binding DataContext.AvailableScreens, RelativeSource={RelativeSource AncestorType=Window}}"
                                              SelectedItem="{Binding AssignedScreen}"
                                              Style="{StaticResource PinkComboBoxStyle}"
                                              Width="220"
                                              Margin="8,0"/>
                                              
                                    <!-- Remove Button -->
                                    <Button Grid.Column="3" 
                                            Style="{StaticResource WindowHeaderCloseButtonStyle}"
                                            Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- Controls Row -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/> <!-- Label -->
                                        <ColumnDefinition Width="*"/>    <!-- Slider -->
                                        <ColumnDefinition Width="Auto"/> <!-- Value -->
                                        <ColumnDefinition Width="20"/>   <!-- Spacer -->
                                        <ColumnDefinition Width="Auto"/> <!-- Label -->
                                        <ColumnDefinition Width="*"/>    <!-- Slider -->
                                        <ColumnDefinition Width="Auto"/> <!-- Value -->
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Opacity -->
                                    <TextBlock Text="Opacity" Foreground="{StaticResource TextTertiary}" FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <Slider Grid.Column="1" 
                                            Value="{Binding Opacity, Converter={StaticResource OpacityScaleConverter}}" 
                                            Minimum="0" Maximum="1" 
                                            IsSnapToTickEnabled="True"
                                            TickFrequency="0.1"
                                            TickPlacement="BottomRight"
                                            Style="{StaticResource NeonSliderStyle}" 
                                            VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding Opacity, Converter={StaticResource OpacityToIntConverter}}" 
                                               Foreground="{StaticResource TextPrimary}" 
                                               FontSize="11"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center" 
                                               Margin="8,0,0,0" 
                                               Width="30" TextAlignment="Right"/>
                                               
                                    <!-- Volume -->
                                    <TextBlock Grid.Column="4" Text="Volume" Foreground="{StaticResource TextTertiary}" FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <Slider Grid.Column="5" 
                                            Value="{Binding Volume}" 
                                            Minimum="0" Maximum="1" 
                                            IsSnapToTickEnabled="True"
                                            TickFrequency="0.1"
                                            TickPlacement="BottomRight"
                                            Style="{StaticResource NeonSliderStyle}" 
                                            VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="6" 
                                               Text="{Binding Volume, StringFormat=P0}" 
                                               Foreground="{StaticResource TextPrimary}" 
                                               FontSize="11"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center" 
                                               Margin="8,0,0,0" 
                                               Width="30" TextAlignment="Right"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            
            <Grid IsHitTestVisible="False">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasItems, ElementName=AddedFilesList}" Value="False">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Path Data="{StaticResource Icon_Folder}" Fill="{StaticResource TextSecondary}" Stretch="Uniform" Width="64" Height="64" Opacity="0.5" Margin="0,0,0,20"/>
                    <TextBlock Text="Drag &amp; Drop videos here" 
                               Foreground="{StaticResource TextSecondary}" 
                               HorizontalAlignment="Center" 
                               TextAlignment="Center" 
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="or click Browse to add files, Add URL for online videos" 
                               Foreground="{StaticResource TextTertiary}" 
                               HorizontalAlignment="Center" 
                               TextAlignment="Center" 
                               FontSize="12"
                               FontStyle="Italic"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Bottom Layout Section: Actions, Status, and Controls -->
        <StackPanel Grid.Row="6" Margin="0,0,0,16">
            <!-- Playlist Actions: Save, Load, Clear -->
            <Border BorderBrush="#22FFFFFF" BorderThickness="0,1,0,0" Margin="{StaticResource SectionMargin}" Padding="0,16,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Command="{Binding SavePlaylistCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="8,0,0,0" Padding="16,0">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource Icon_Save}" Fill="{StaticResource AccentPrimary}" Stretch="Uniform" Width="14" Height="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Save Playlist" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding LoadPlaylistCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="8,0,0,0" Padding="16,0">
                        <StackPanel Orientation="Horizontal">
                             <Path Data="{StaticResource Icon_Folder}" Fill="{StaticResource AccentPrimary}" Stretch="Uniform" Width="14" Height="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Load Playlist" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding ClearAllCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="8,0,0,0" Padding="16,0">
                        <StackPanel Orientation="Horizontal">
                             <Path Data="{StaticResource Icon_Trash}" Fill="{StaticResource AccentPrimary}" Stretch="Uniform" Width="14" Height="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Clear All" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        
        
        

            <!-- Status and Secondary Info -->
            <StackPanel Margin="0,0,0,0">
            <!-- Random Shuffle -->
            <Grid HorizontalAlignment="Center" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Style="{StaticResource LowerTitle}" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center">Random shuffle</Label>
                <CheckBox x:Name="ShuffleCheckBox" 
                          IsChecked="{Binding Shuffle}" 
                          Grid.Column="1" 
                          Style="{StaticResource ModernCheckBoxStyle}"
                          Margin="12,0,0,0"
                          VerticalAlignment="Center" 
                          ToolTip="Randomize video playback order"/>
            </Grid>

            <!-- Status Message -->
            <Border x:Name="StatusBorder" 
                    Background="{StaticResource BackgroundSecondary}"
                    CornerRadius="8" 
                    Margin="0,0,0,16" 
                    Padding="16,12" 
                    BorderThickness="1"
                    BorderBrush="{Binding StatusMessageType, Converter={StaticResource StatusMessageTypeToBrushConverter}}"
                    Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="{Binding StatusMessageType, Converter={StaticResource StatusMessageTypeToForegroundConverter}}" 
                           FontSize="13" 
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           FontWeight="SemiBold"/>
            </Border>

            <!-- Active Playback Controls (Moved here) -->
            <StackPanel Visibility="{Binding HasActivePlayers, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Label Style="{StaticResource LowerTitle}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12">Active Sessions</Label>
                <ItemsControl ItemsSource="{Binding ActivePlayers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,8" CornerRadius="8" Background="{StaticResource BackgroundSecondary}" BorderBrush="{StaticResource AccentPrimary}" BorderThickness="1">
                                <Grid Padding="16,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding ScreenName}" VerticalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" FontSize="13" TextTrimming="CharacterEllipsis"/>
                                    <Button Grid.Column="1" Command="{Binding TogglePlayPauseCommand}" Style="{StaticResource ControlButton}" Margin="12,0,0,0" Width="32" Height="32">
                                         <Path Data="{StaticResource Icon_Play}" Fill="{StaticResource AccentPrimary}" Stretch="Uniform" Width="10" Height="10"/>
                                    </Button>
                                    <Button Grid.Column="2" Command="{Binding SkipCommand}" Style="{StaticResource ControlButton}" Margin="8,0,0,0" Width="32" Height="32">
                                         <Path Data="{StaticResource Icon_Next}" Fill="{StaticResource AccentPrimary}" Stretch="Uniform" Width="10" Height="10"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>
        <Button x:Name="TrainingToggleButton" 
                Style="{StaticResource TrainingToggleButtonStyle}"
                CommandParameter="{Binding ElementName=AddedFilesList, Path=SelectedItems}" 
                Grid.Row="7"
                Height="56"
                FontSize="18"
                FontWeight="Bold">
            <Button.Effect>
                <DropShadowEffect Color="#FF69B4" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
            </Button.Effect>
        </Button>




            <!-- Busy Indicator Overlay -->
            <Grid Grid.Row="0" Grid.RowSpan="6" Background="#CC000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" IsHitTestVisible="True" Panel.ZIndex="1000">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid Width="60" Height="60">
                       <Grid.Resources>
                            <Storyboard x:Key="SpinnerStoryboard" RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetName="SpinnerTransform" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:1.5"/>
                            </Storyboard>
                        </Grid.Resources>
                        <Grid.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard Storyboard="{StaticResource SpinnerStoryboard}"/>
                            </EventTrigger>
                        </Grid.Triggers>
                         <Path Data="M 30,0 A 30,30 0 0 1 60,30" Stroke="{StaticResource AccentPrimary}" StrokeThickness="5" RenderTransformOrigin="0.5,0.5">
                             <Path.RenderTransform>
                                <RotateTransform x:Name="SpinnerTransform"/>
                             </Path.RenderTransform>
                         </Path>
                         <Path Data="M 60,30 A 30,30 0 0 1 30,60" Stroke="{StaticResource TextSecondary}" StrokeThickness="5" Opacity="0.3" RenderTransformOrigin="0.5,0.5">
                              <Path.RenderTransform>
                                <RotateTransform Angle="0"/>
                             </Path.RenderTransform>
                         </Path>
                    </Grid>
                    <TextBlock Text="Please wait..." Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center" Margin="0,15,0,0" FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>

</Window>
