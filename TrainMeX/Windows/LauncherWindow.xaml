<Window x:Class="TrainMeX.Windows.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainMeX.Windows"
        xmlns:vm="clr-namespace:TrainMeX.ViewModels"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="TrainMeX Launcher" Width="600" Height="700" MinWidth="600" MinHeight="400"
        ResizeMode="CanResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent"
        Icon="pack://application:,,,/Images/icon.ico"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        >
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" 
                     ResizeBorderThickness="5" 
                     GlassFrameThickness="0" 
                     CornerRadius="0"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:PluralConverter x:Key="PluralConverter"/>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:StatusMessageTypeToBrushConverter x:Key="StatusMessageTypeToBrushConverter"/>
        <local:StatusMessageTypeToForegroundConverter x:Key="StatusMessageTypeToForegroundConverter"/>
        <local:ValidationStatusToBrushConverter x:Key="ValidationStatusToBrushConverter"/>
        <local:ValidationStatusToIconConverter x:Key="ValidationStatusToIconConverter"/>
        <local:ValidationStatusToOpacityConverter x:Key="ValidationStatusToOpacityConverter"/>
        <local:ValidationStatusToForegroundConverter x:Key="ValidationStatusToForegroundConverter"/>
        <local:OpacityToIntConverter x:Key="OpacityToIntConverter"/>
        <local:OpacityScaleConverter x:Key="OpacityScaleConverter"/>
        
        <Style x:Key="ActivePlayerButtonStyle" TargetType="Button" BasedOn="{StaticResource ControlButton}">
            <Setter Property="Foreground" Value="{StaticResource AccentPrimary}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentPrimary}"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MainActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BackgroundSecondary}"/>
            <Setter Property="BorderBrush" Value="#3D0A1F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="13"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3D0A1F"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#6D4F5F"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1A0510"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TrainingToggleButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButton}">
            <!-- Base State (Train Me) -->
            <Setter Property="Content" Value="â–·  TRAIN ME!"/>
            <Setter Property="Background" Value="{StaticResource AccentPrimary}"/>
            <Setter Property="Command" Value="{Binding HypnotizeCommand}"/>
            <Setter Property="IsEnabled" Value="{Binding IsHypnotizeEnabled}"/>
            <Setter Property="ToolTip" Value="Start playing videos on assigned screens"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            
            <Style.Triggers>
                <!-- Active State (End Training) -->
                <DataTrigger Binding="{Binding HasActivePlayers}" Value="True">
                    <Setter Property="Background" Value="{StaticResource ErrorColor}"/>
                    <Setter Property="Content" Value="â–¢  End All Training"/>
                    <Setter Property="Command" Value="{Binding DehypnotizeCommand}"/>
                    <Setter Property="IsEnabled" Value="True"/>
                    <Setter Property="ToolTip" Value="Stop all video playback"/>
                </DataTrigger>
                
                <!-- Hover state for Active -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding HasActivePlayers}" Value="True"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="{StaticResource ErrorColor}"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border x:Name="MainBorder" 
            Background="{StaticResource BackgroundPrimary}" 
            BorderBrush="{StaticResource AccentPrimary}" 
            BorderThickness="1"
            CornerRadius="8">
        <Grid MouseLeftButtonDown="Window_MouseLeftButtonDown">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}" Value="Maximized">
                            <Setter Property="Margin" Value="{x:Static SystemParameters.WindowResizeBorderThickness}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Header with gradient and rounded corners -->
        <Border x:Name="HeaderBorder" CornerRadius="8,8,0,0" 
                Height="50"
                Grid.Row="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#3D0A1F" Offset="0"/>
                    <GradientStop Color="#3D0A1F" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Title and Icon on Left -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                    <Image Source="pack://application:,,,/Images/icon.ico" Width="24" Height="24" Margin="0,0,10,0">
                        <Image.Effect>
                            <DropShadowEffect Color="#FF69B4" BlurRadius="8" ShadowDepth="0" Opacity="0.5"/>
                        </Image.Effect>
                    </Image>
                    <TextBlock Text="TrainMeX" Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Control Buttons on Right -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,0">
                    <Button Style="{StaticResource ControlButton}" Click="AboutButton_Click" Width="35" Height="50" FontSize="14" ToolTip="About TrainMeX" FontWeight="Bold">i</Button>
                    <Button Style="{StaticResource ControlButton}" Click="SettingsButton_Click" Width="35" Height="50" FontSize="14" ToolTip="Open settings">âš™</Button>
                    <Button Style="{StaticResource ControlButton}" Command="{Binding MinimizeCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="40" Height="50" ToolTip="Minimize window">-</Button>
                    <Button x:Name="MaximizeButton" Style="{StaticResource ControlButton}" Click="MaximizeButton_Click" Width="40" Height="50" ToolTip="Maximize/Restore window">â–¡</Button>
                    <Button Style="{StaticResource ControlButton}" 
                            Command="{Binding ExitCommand}" 
                            Width="50" Height="50" 
                            Background="#FF69B4"
                            Foreground="White"
                            BorderThickness="0"
                            Content="âœ•" 
                            FontSize="18"
                            ToolTip="Exit application">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="0,8,0,0"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Title section with better spacing -->
        <StackPanel Margin="0,20,0,20" Grid.Row="1">
            <Label Style="{StaticResource MainTitle}" Margin="0,0,0,6">TrainMeX</Label>
            <Label Style="{StaticResource LowerTitle}" 
                   FontStyle="Italic"
                   Margin="0,0,0,0">Overlay video player for sissies</Label>
        </StackPanel>
        <Grid Margin="0,10,0,0" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="BrowseButton" Grid.Column="0" Margin="0,0,5,0" Style="{StaticResource MainActionButtonStyle}" Command="{Binding BrowseCommand}" ToolTip="Browse and add video files to playlist">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“" Margin="0,0,8,0" FontSize="14"/>
                    <TextBlock Text="Browse Videos"/>
                </StackPanel>
            </Button>
            <Button x:Name="AddUrlButton" Grid.Column="1" Margin="5,0,5,0" Style="{StaticResource MainActionButtonStyle}" Command="{Binding AddUrlCommand}" ToolTip="Add a video URL to playlist">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ”—" Margin="0,0,8,0" FontSize="14"/>
                    <TextBlock Text="Add URL"/>
                </StackPanel>
            </Button>
            <Button x:Name="ImportPlaylistButton" Grid.Column="2" Margin="5,0,0,0" Style="{StaticResource MainActionButtonStyle}" Command="{Binding ImportPlaylistCommand}" ToolTip="Import playlist from supported sites">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“¥" Margin="0,0,8,0" FontSize="14"/>
                    <TextBlock Text="Import Playlist"/>
                </StackPanel>
            </Button>
            <!-- Progress indicator overlay -->
            <ProgressBar 
                Grid.ColumnSpan="3"
                Height="4" 
                VerticalAlignment="Bottom" 
                Margin="10,0,10,2"
                IsIndeterminate="True"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                Foreground="{StaticResource AccentPrimary}"
                Background="Transparent"
                BorderThickness="0"/>
        </Grid>
        <Grid Margin="0,0,0,0" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Style="{StaticResource LowerTitle}" Grid.Column="0" FontSize="15" FontWeight="SemiBold">Playlist</Label>
            <TextBlock Grid.Column="1" 
                      Foreground="{StaticResource TextSecondary}" 
                      FontSize="12" 
                      VerticalAlignment="Center" 
                      Margin="8,0,0,0"
                      TextAlignment="Left"
                      FontWeight="SemiBold">
                <TextBlock.Text>
                    <MultiBinding StringFormat="({0} {1})">
                        <Binding Path="AddedFiles.Count"/>
                        <Binding Path="AddedFiles.Count" Converter="{StaticResource PluralConverter}"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </Grid>
        
        <Grid Margin="0,8,0,0" Grid.Row="4" MinHeight="200">
            <Border Background="#FF000000" Opacity="0.2" CornerRadius="8"/>
            
            <ListView x:Name="AddedFilesList" 
                      ItemsSource="{Binding AddedFiles}" 
                      SelectionMode="Single" 
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      Background="Transparent"
                      BorderThickness="0"
                      AllowDrop="True"
                      PreviewMouseLeftButtonDown="AddedFilesList_PreviewMouseLeftButtonDown"
                      MouseMove="AddedFilesList_MouseMove"
                      Drop="AddedFilesList_Drop"
                      DragOver="AddedFilesList_DragOver"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling">
                
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#3D0A1F" CornerRadius="6" Margin="0,4" Padding="8">
                            <Border.BorderBrush>
                                <SolidColorBrush Color="#FF69B4" Opacity="0.3"/>
                            </Border.BorderBrush>
                            <Border.BorderThickness>1</Border.BorderThickness>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Header Row -->
                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/> <!-- Icon -->
                                        <ColumnDefinition Width="*"/>    <!-- Title -->
                                        <ColumnDefinition Width="Auto"/> <!-- Screen -->
                                        <ColumnDefinition Width="Auto"/> <!-- Close -->
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Valid Icon -->
                                    <Path Data="M 0 5 L 4 9 L 10 1" 
                                          Stroke="{StaticResource SuccessColor}" 
                                          StrokeThickness="2" 
                                          VerticalAlignment="Center" 
                                          Margin="0,0,10,0"/>
                                          
                                    <!-- Title -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding FileName}" 
                                               Foreground="{StaticResource TextPrimary}" 
                                               FontWeight="SemiBold" 
                                               TextTrimming="CharacterEllipsis" 
                                               VerticalAlignment="Center"
                                               ToolTip="{Binding FilePath}"/>
                                               
                                    <!-- Screen Selector -->
                                    <ComboBox Grid.Column="2" 
                                              ItemsSource="{Binding DataContext.AvailableScreens, RelativeSource={RelativeSource AncestorType=Window}}"
                                              SelectedItem="{Binding AssignedScreen}"
                                              Style="{StaticResource PinkComboBoxStyle}"
                                              Width="220"
                                              Margin="10,0"/>
                                              
                                    <!-- Remove Button -->
                                    <Button Grid.Column="3" 
                                            Style="{StaticResource WindowHeaderCloseButtonStyle}"
                                            Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- Controls Row -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/> <!-- Label -->
                                        <ColumnDefinition Width="*"/>    <!-- Slider -->
                                        <ColumnDefinition Width="Auto"/> <!-- Value -->
                                        <ColumnDefinition Width="20"/>   <!-- Spacer -->
                                        <ColumnDefinition Width="Auto"/> <!-- Label -->
                                        <ColumnDefinition Width="*"/>    <!-- Slider -->
                                        <ColumnDefinition Width="Auto"/> <!-- Value -->
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Opacity -->
                                    <TextBlock Text="Opacity" Foreground="{StaticResource TextTertiary}" FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <Slider Grid.Column="1" 
                                            Value="{Binding Opacity, Converter={StaticResource OpacityScaleConverter}}" 
                                            Minimum="0" Maximum="1" 
                                            IsSnapToTickEnabled="True"
                                            TickFrequency="0.1"
                                            TickPlacement="BottomRight"
                                            Style="{StaticResource NeonSliderStyle}" 
                                            VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding Opacity, Converter={StaticResource OpacityToIntConverter}}" 
                                               Foreground="{StaticResource TextPrimary}" 
                                               FontSize="11"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center" 
                                               Margin="8,0,0,0" 
                                               Width="30" TextAlignment="Right"/>
                                               
                                    <!-- Volume -->
                                    <TextBlock Grid.Column="4" Text="Volume" Foreground="{StaticResource TextTertiary}" FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <Slider Grid.Column="5" 
                                            Value="{Binding Volume}" 
                                            Minimum="0" Maximum="1" 
                                            IsSnapToTickEnabled="True"
                                            TickFrequency="0.1"
                                            TickPlacement="BottomRight"
                                            Style="{StaticResource NeonSliderStyle}" 
                                            VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="6" 
                                               Text="{Binding Volume, StringFormat=P0}" 
                                               Foreground="{StaticResource TextPrimary}" 
                                               FontSize="11"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center" 
                                               Margin="8,0,0,0" 
                                               Width="30" TextAlignment="Right"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            
            <Grid IsHitTestVisible="False">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasItems, ElementName=AddedFilesList}" Value="False">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“" FontSize="48" HorizontalAlignment="Center" Opacity="0.5" Margin="0,0,0,10"/>
                    <TextBlock Text="Drag &amp; Drop videos here" 
                               Foreground="{StaticResource TextSecondary}" 
                               HorizontalAlignment="Center" 
                               TextAlignment="Center" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="or click Browse to add files, Add URL for online videos" 
                               Foreground="{StaticResource TextTertiary}" 
                               HorizontalAlignment="Center" 
                               TextAlignment="Center" 
                               FontSize="12"
                               FontStyle="Italic"/>
                </StackPanel>
            </Grid>
        </Grid>

        <Border Grid.Row="5" BorderBrush="#22FFFFFF" BorderThickness="0,1,0,0" Margin="10,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,5,8">
                <Button Command="{Binding SavePlaylistCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="5,0" Height="38" Padding="15,0" ToolTip="Save current playlist to a file">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’¾" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="Save" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding LoadPlaylistCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="5,0" Height="38" Padding="15,0" ToolTip="Load a playlist from a file">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“‚" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="Load" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding ClearAllCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="5,0" Height="38" Padding="15,0" ToolTip="Remove all videos from playlist">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ—‘ï¸" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="Clear" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
        
        
        

        <!-- Status Message Area -->
        <Border x:Name="StatusBorder" 
                Background="{Binding StatusMessageType, Converter={StaticResource StatusMessageTypeToBrushConverter}}" 
                CornerRadius="6" 
                Margin="10,8" 
                Padding="12,8" 
                MinHeight="20" 
                BorderThickness="1"
                BorderBrush="{Binding StatusMessageType, Converter={StaticResource StatusMessageTypeToBrushConverter}}"
                Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"
                Grid.Row="6">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="6" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>
            <TextBlock Text="{Binding StatusMessage}" 
                      Foreground="{Binding StatusMessageType, Converter={StaticResource StatusMessageTypeToForegroundConverter}}" 
                      FontSize="13" 
                      TextAlignment="Center"
                      TextWrapping="Wrap"
                      FontWeight="SemiBold"/>
        </Border>
        
        <Grid HorizontalAlignment="Center" Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Style="{StaticResource LowerTitle}" FontSize="14" FontWeight="SemiBold">Random shuffle</Label>
            <CheckBox x:Name="ShuffleCheckBox" IsChecked="{Binding Shuffle}" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" ToolTip="Randomize video playback order"></CheckBox>
        </Grid>
        <Button x:Name="TrainingToggleButton" 
                Style="{StaticResource TrainingToggleButtonStyle}"
                CommandParameter="{Binding ElementName=AddedFilesList, Path=SelectedItems}" 
                Grid.Row="10">
            <Button.Effect>
                <DropShadowEffect Color="#FF69B4" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
            </Button.Effect>
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Loaded">
                    <BeginStoryboard Name="PulsingGlow" Storyboard="{StaticResource PulsingGlowStoryboard}"/>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <!-- Active Playback Controls -->
        <StackPanel Grid.Row="8" Margin="0,5,0,10" Visibility="{Binding HasActivePlayers, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Label Style="{StaticResource LowerTitle}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5">Active Sessions</Label>
            <ItemsControl ItemsSource="{Binding ActivePlayers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,6" CornerRadius="6" BorderBrush="{StaticResource AccentPrimary}" BorderThickness="1" UseLayoutRounding="True" SnapsToDevicePixels="True">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#0A0005" Offset="0"/>
                                    <GradientStop Color="#000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel Margin="12,8,12,12">
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding ScreenName}" VerticalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"
                                               FontSize="12" TextTrimming="CharacterEllipsis" Margin="0,0,10,0"/>

                                    <Button Grid.Column="1" Command="{Binding TogglePlayPauseCommand}" 
                                            Style="{StaticResource ActivePlayerButtonStyle}" ToolTip="Play/Pause">
                                        <TextBlock Text="â¯" FontSize="14"/>
                                    </Button>
                                    <Button Grid.Column="2" Command="{Binding SkipCommand}" 
                                            Style="{StaticResource ActivePlayerButtonStyle}" ToolTip="Skip Video">
                                        <TextBlock Text="â­" FontSize="14"/>
                                    </Button>
                                </Grid>
                                
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>


            <!-- Busy Indicator Overlay -->
            <Grid Grid.Row="0" Grid.RowSpan="12" Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" IsHitTestVisible="True" Panel.ZIndex="1000">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid Width="60" Height="60">
                       <Grid.Resources>
                            <Storyboard x:Key="SpinnerStoryboard" RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetName="SpinnerTransform" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:1.5"/>
                            </Storyboard>
                        </Grid.Resources>
                        <Grid.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard Storyboard="{StaticResource SpinnerStoryboard}"/>
                            </EventTrigger>
                        </Grid.Triggers>
                         <Path Data="M 30,0 A 30,30 0 0 1 60,30" Stroke="{StaticResource AccentPrimary}" StrokeThickness="5" RenderTransformOrigin="0.5,0.5">
