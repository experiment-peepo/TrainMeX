                                <RotateTransform x:Name="SpinnerTransform"/>
                             </Path.RenderTransform>
                         </Path>
                         <Path Data="M 60,30 A 30,30 0 0 1 30,60" Stroke="{StaticResource TextSecondary}" StrokeThickness="5" Opacity="0.3" RenderTransformOrigin="0.5,0.5">
