<Window x:Class="TrainMeX.Windows.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainMeX.Windows"
        xmlns:vm="clr-namespace:TrainMeX.ViewModels"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="TrainMeX Launcher" Width="500" Height="700" MinWidth="500" MinHeight="400"
        ResizeMode="CanResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent"
        Icon="pack://application:,,,/Images/icon.ico"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        >
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" 
                     ResizeBorderThickness="5" 
                     GlassFrameThickness="0" 
                     CornerRadius="0"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:PluralConverter x:Key="PluralConverter"/>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:StatusMessageTypeToBrushConverter x:Key="StatusMessageTypeToBrushConverter"/>
        <local:StatusMessageTypeToForegroundConverter x:Key="StatusMessageTypeToForegroundConverter"/>
        <local:ValidationStatusToBrushConverter x:Key="ValidationStatusToBrushConverter"/>
        <local:ValidationStatusToIconConverter x:Key="ValidationStatusToIconConverter"/>
        <local:ValidationStatusToOpacityConverter x:Key="ValidationStatusToOpacityConverter"/>
        <local:ValidationStatusToForegroundConverter x:Key="ValidationStatusToForegroundConverter"/>
        <local:OpacityToIntConverter x:Key="OpacityToIntConverter"/>
        <local:OpacityScaleConverter x:Key="OpacityScaleConverter"/>
        
        <Style x:Key="ActivePlayerButtonStyle" TargetType="Button" BasedOn="{StaticResource ControlButton}">
            <Setter Property="Foreground" Value="{StaticResource AccentPrimary}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentPrimary}"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border x:Name="MainBorder" 
            Background="{StaticResource BackgroundPrimary}" 
            BorderBrush="{StaticResource AccentPrimary}" 
            BorderThickness="1"
            CornerRadius="8">
        <Grid MouseLeftButtonDown="Window_MouseLeftButtonDown">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}" Value="Maximized">
                            <Setter Property="Margin" Value="{x:Static SystemParameters.WindowResizeBorderThickness}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Header with gradient and rounded corners -->
        <Border x:Name="HeaderBorder" CornerRadius="8,8,0,0" 
                Height="50"
                Grid.Row="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#4D2F3F" Offset="0"/>
                    <GradientStop Color="#3D1F2E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid FlowDirection="RightToLeft" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Style="{StaticResource ControlButton}" Command="{Binding ExitCommand}" ToolTip="Exit application">x</Button>
                <Button x:Name="MaximizeButton" Style="{StaticResource ControlButton}" Click="MaximizeButton_Click" Grid.Column="1" ToolTip="Maximize/Restore window">â–¡</Button>
                <Button Style="{StaticResource ControlButton}" Command="{Binding MinimizeCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Grid.Column="2" ToolTip="Minimize window">-</Button>
                <Button Style="{StaticResource ControlButton}" Click="SettingsButton_Click" Grid.Column="3" FontSize="14" ToolTip="Open settings">âš™</Button>
                <Button Style="{StaticResource ControlButton}" Click="AboutButton_Click" Grid.Column="4" FontSize="14" ToolTip="About TrainMeX" FontWeight="Bold">i</Button>
            </Grid>
        </Border>
        
        <!-- Title section with better spacing -->
        <StackPanel Margin="0,20,0,20" Grid.Row="1">
            <Label Style="{StaticResource MainTitle}" Margin="0,0,0,6">TrainMeX</Label>
            <Label Style="{StaticResource LowerTitle}" 
                   FontStyle="Italic"
                   Margin="0,0,0,0">Overlay video player for sissies</Label>
        </StackPanel>
        <Grid Margin="0,10,0,0" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="BrowseButton" Grid.Column="0" Margin="0,0,5,0" Command="{Binding BrowseCommand}" ToolTip="Browse and add video files to playlist">Browse Videos...</Button>
            <Button x:Name="AddUrlButton" Grid.Column="1" Margin="2,0,2,0" Command="{Binding AddUrlCommand}" ToolTip="Add a video URL to playlist">Add URL</Button>
            <Button x:Name="ImportPlaylistButton" Grid.Column="2" Margin="5,0,0,0" Command="{Binding ImportPlaylistCommand}" ToolTip="Import playlist from supported sites">Import Playlist</Button>
            <!-- Progress indicator overlay -->
            <ProgressBar 
                Grid.ColumnSpan="3"
                Height="4" 
                VerticalAlignment="Bottom" 
                Margin="10,0,10,2"
                IsIndeterminate="True"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                Foreground="{StaticResource AccentPrimary}"
                Background="Transparent"
                BorderThickness="0"/>
        </Grid>
        <Grid Margin="0,0,0,0" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Style="{StaticResource LowerTitle}" Grid.Column="0" FontSize="15" FontWeight="SemiBold">Playlist</Label>
            <TextBlock Grid.Column="1" 
                      Foreground="{StaticResource TextSecondary}" 
                      FontSize="12" 
                      VerticalAlignment="Center" 
                      Margin="8,0,0,0"
                      TextAlignment="Left"
                      FontWeight="SemiBold">
                <TextBlock.Text>
                    <MultiBinding StringFormat="({0} {1})">
                        <Binding Path="AddedFiles.Count"/>
                        <Binding Path="AddedFiles.Count" Converter="{StaticResource PluralConverter}"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </Grid>
        
        <Grid Margin="0,8,0,0" Grid.Row="4" MinHeight="200">
            <Border Background="#FF000000" Opacity="0.2" CornerRadius="8"/>
            
            <ListView x:Name="AddedFilesList" ItemsSource="{Binding AddedFiles}" SelectionMode="Single" 
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      AllowDrop="True" 
                      DragOver="AddedFilesList_DragOver" 
                      Drop="AddedFilesList_Drop"
                      PreviewMouseLeftButtonDown="AddedFilesList_PreviewMouseLeftButtonDown"
                      MouseMove="AddedFilesList_MouseMove"
                      Background="Transparent" BorderThickness="0"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,6,0,6"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="MinHeight" Value="85"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource BackgroundSecondary}" 
                                CornerRadius="8" 
                                Padding="14,12" 
                                Margin="0,0,0,10"
                                BorderBrush="{Binding ValidationStatus, Converter={StaticResource ValidationStatusToBrushConverter}}" 
                                BorderThickness="1.5" 
                                Opacity="{Binding ValidationStatus, Converter={StaticResource ValidationStatusToOpacityConverter}}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.15"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Value="True">
                                            <Setter Property="Background" Value="{StaticResource BackgroundHeader}"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource BorderPink}"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#FF69B4" BlurRadius="12" ShadowDepth="0" Opacity="0.5"/>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Validation Status Icon -->
                                <TextBlock Grid.Column="0" Text="{Binding ValidationStatus, Converter={StaticResource ValidationStatusToIconConverter}}" 
                                          FontSize="16" VerticalAlignment="Top" Margin="0,5,8,0"
                                          Foreground="{Binding ValidationStatus, Converter={StaticResource ValidationStatusToForegroundConverter}}">
                                    <TextBlock.ToolTip>
                                        <ToolTip>
                                            <StackPanel>
                                                <TextBlock Text="{Binding FilePath}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding ValidationError}" Foreground="Red" Visibility="{Binding ValidationError, Converter={StaticResource StringToVisibilityConverter}}"/>
                                            </StackPanel>
                                        </ToolTip>
                                    </TextBlock.ToolTip>
                                </TextBlock>
                                
                                <!-- Content Stack -->
                                <StackPanel Grid.Column="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding FileName}" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" 
                                                  FontWeight="SemiBold" FontSize="13" TextTrimming="CharacterEllipsis">
                                            <TextBlock.ToolTip>
                                                <ToolTip>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding FilePath}" FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding ValidationError}" Foreground="Red" Visibility="{Binding ValidationError, Converter={StaticResource StringToVisibilityConverter}}" Margin="0,5,0,0"/>
                                                    </StackPanel>
                                                </ToolTip>
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                        
                                        <ComboBox Grid.Column="1" x:Name="AssignCombo" Margin="8,0,0,0" Width="240" VerticalAlignment="Center"
                                                  Style="{StaticResource PinkComboBoxStyle}"
                                                  ItemsSource="{Binding DataContext.AvailableScreens, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  SelectedItem="{Binding AssignedScreen}"
                                                  ToolTip="Select screen/monitor to display this video on" />
                                    </Grid>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <TextBlock Text="Op" Foreground="{StaticResource TextTertiary}" FontSize="11" VerticalAlignment="Center" Width="20" FontWeight="SemiBold"/>
                                        <Slider Style="{StaticResource NeonSliderStyle}" Width="90" Value="{Binding Opacity, Converter={StaticResource OpacityScaleConverter}}" Minimum="0" Maximum="1.0" Margin="0,0,8,0" 
                                                IsSnapToTickEnabled="True" SmallChange="0.01" LargeChange="0.1" TickFrequency="0.01" ToolTip="Item Opacity"/>
                                        <TextBlock Text="{Binding Opacity, Converter={StaticResource OpacityToIntConverter}}" Foreground="{StaticResource TextSecondary}" FontSize="11" VerticalAlignment="Center" MinWidth="35" TextAlignment="Left" FontWeight="SemiBold"/>
                                        
                                        <TextBlock Text="Vol" Foreground="{StaticResource TextTertiary}" FontSize="11" VerticalAlignment="Center" Width="25" Margin="12,0,0,0" FontWeight="SemiBold"/>
                                        <Slider Style="{StaticResource NeonSliderStyle}" Width="90" Value="{Binding Volume}" Minimum="0" Maximum="1" Margin="0,0,8,0" 
                                                IsSnapToTickEnabled="True" SmallChange="0.01" LargeChange="0.1" TickFrequency="0.01" ToolTip="Item Volume"/>
                                        <TextBlock Text="{Binding Volume, StringFormat='{}{0:P0}'}" Foreground="{StaticResource TextSecondary}" FontSize="11" VerticalAlignment="Center" MinWidth="35" TextAlignment="Left" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>
                                          
                                <Button Grid.Column="2" Content="âœ•" Width="20" Height="20" VerticalAlignment="Top" Margin="8,0,0,0"
                                        Background="Transparent" Foreground="#AAFFFFFF" BorderThickness="0"
                                        Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        ToolTip="Remove from playlist">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <Grid IsHitTestVisible="False">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasItems, ElementName=AddedFilesList}" Value="False">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“" FontSize="48" HorizontalAlignment="Center" Opacity="0.5" Margin="0,0,0,10"/>
                    <TextBlock Text="Drag &amp; Drop videos here" 
                               Foreground="{StaticResource TextSecondary}" 
                               HorizontalAlignment="Center" 
                               TextAlignment="Center" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="or click Browse to add files, Add URL for online videos" 
                               Foreground="{StaticResource TextTertiary}" 
                               HorizontalAlignment="Center" 
                               TextAlignment="Center" 
                               FontSize="12"
                               FontStyle="Italic"/>
                </StackPanel>
            </Grid>
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Row="5">
            <Button Command="{Binding SavePlaylistCommand}" Margin="6,0" Foreground="{StaticResource TextSecondary}" Background="Transparent" FontSize="12" BorderThickness="0" FontWeight="SemiBold" ToolTip="Save current playlist to a file">Save Playlist</Button>
            <Button Command="{Binding LoadPlaylistCommand}" Margin="6,0" Foreground="{StaticResource TextSecondary}" Background="Transparent" FontSize="12" BorderThickness="0" FontWeight="SemiBold" ToolTip="Load a playlist from a file">Load Playlist</Button>
            <Button Command="{Binding ClearAllCommand}" Margin="6,0" Foreground="{StaticResource TextSecondary}" Background="Transparent" FontSize="12" BorderThickness="0" FontWeight="SemiBold" ToolTip="Remove all videos from playlist">Clear Playlist</Button>
        </StackPanel>
        
        
        

        <!-- Status Message Area -->
        <Border Background="{Binding StatusMessageType, Converter={StaticResource StatusMessageTypeToBrushConverter}}" 
                CornerRadius="6" 
                Margin="10,8" 
                Padding="12,8" 
                MinHeight="20" 
                BorderThickness="1"
                BorderBrush="{Binding StatusMessageType, Converter={StaticResource StatusMessageTypeToBrushConverter}}"
                Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"
                Grid.Row="6">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="6" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>
            <TextBlock Text="{Binding StatusMessage}" 
                      Foreground="{Binding StatusMessageType, Converter={StaticResource StatusMessageTypeToForegroundConverter}}" 
                      FontSize="13" 
                      TextAlignment="Center"
                      TextWrapping="Wrap"
                      FontWeight="SemiBold"/>
        </Border>
        
        <Grid HorizontalAlignment="Center" Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Style="{StaticResource LowerTitle}" FontSize="14" FontWeight="SemiBold">Random shuffle</Label>
            <CheckBox x:Name="ShuffleCheckBox" IsChecked="{Binding Shuffle}" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" ToolTip="Randomize video playback order"></CheckBox>
        </Grid>
        <Button x:Name="HypnotizeButton" 
                Command="{Binding HypnotizeCommand}" 
                CommandParameter="{Binding ElementName=AddedFilesList, Path=SelectedItems}" 
                IsEnabled="{Binding IsHypnotizeEnabled}" 
                Content="{Binding HypnotizeButtonText}" 
                Style="{StaticResource PrimaryButtonStyle}"
                ToolTip="Start playing videos on assigned screens"
                Grid.Row="8">
            <Button.Effect>
                <DropShadowEffect Color="#FF69B4" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
            </Button.Effect>
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Loaded">
                    <BeginStoryboard Name="PulsingGlow" Storyboard="{StaticResource PulsingGlowStoryboard}"/>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <!-- Active Playback Controls -->
        <StackPanel Grid.Row="10" Margin="0,5,0,10" Visibility="{Binding HasActivePlayers, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Label Style="{StaticResource LowerTitle}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5">Active Sessions</Label>
            <ItemsControl ItemsSource="{Binding ActivePlayers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,6" CornerRadius="6" BorderBrush="{StaticResource AccentPrimary}" BorderThickness="1" UseLayoutRounding="True" SnapsToDevicePixels="True">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#0A0005" Offset="0"/>
                                    <GradientStop Color="#000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid Margin="12,6,8,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding ScreenName}" VerticalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"
                                           FontSize="11" TextTrimming="CharacterEllipsis" Margin="0,0,10,0"/>

                                <Button Grid.Column="1" Command="{Binding TogglePlayPauseCommand}" 
                                        Style="{StaticResource ActivePlayerButtonStyle}" ToolTip="Play/Pause">
                                    <TextBlock Text="â¯" FontSize="12"/>
                                </Button>
                                <Button Grid.Column="2" Command="{Binding SkipCommand}" 
                                        Style="{StaticResource ActivePlayerButtonStyle}" ToolTip="Skip Video">
                                    <TextBlock Text="â­" FontSize="12"/>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <Button x:Name="DehypnotizeButton" 
                Command="{Binding DehypnotizeCommand}" 
                IsEnabled="{Binding IsDehypnotizeEnabled}" 
                Style="{StaticResource DangerButtonStyle}" 
                ToolTip="Stop all video playback"
                Margin="0,0,0,16"
                Grid.Row="11">End All Training</Button>
        </Grid>
    </Border>

</Window>
