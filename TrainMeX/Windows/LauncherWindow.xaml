<Window x:Class="TrainMeX.Windows.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainMeX.Windows"
        xmlns:vm="clr-namespace:TrainMeX.ViewModels"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="TrainMeX Launcher" Width="700" Height="750" MinWidth="600" MinHeight="400"
        ResizeMode="CanResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent"
        Icon="pack://application:,,,/Images/icon.ico"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        >
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" 
                     ResizeBorderThickness="5" 
                     GlassFrameThickness="0" 
                     CornerRadius="0"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:PluralConverter x:Key="PluralConverter"/>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:StatusMessageTypeToBrushConverter x:Key="StatusMessageTypeToBrushConverter"/>
        <local:StatusMessageTypeToForegroundConverter x:Key="StatusMessageTypeToForegroundConverter"/>
        <local:ValidationStatusToBrushConverter x:Key="ValidationStatusToBrushConverter"/>
        <local:ValidationStatusToIconConverter x:Key="ValidationStatusToIconConverter"/>
        <local:ValidationStatusToOpacityConverter x:Key="ValidationStatusToOpacityConverter"/>
        <local:ValidationStatusToForegroundConverter x:Key="ValidationStatusToForegroundConverter"/>
        <local:OpacityToIntConverter x:Key="OpacityToIntConverter"/>
        <local:OpacityScaleConverter x:Key="OpacityScaleConverter"/>
        
        <Style x:Key="ActivePlayerButtonStyle" TargetType="Button" BasedOn="{StaticResource ControlButton}">
            <Setter Property="Foreground" Value="{StaticResource AccentPrimary}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4" 
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Content="{TemplateBinding Content}"
                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                            RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentPrimary}"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MainActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BackgroundSecondary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentPrimary}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="13"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Instant state changes - NO animations -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentPrimary}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentSecondary}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#CC1493"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentPrimary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TrainingToggleButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButton}">
            <!-- Base State (Train Me) -->
            <Setter Property="Content" Value="▶ Start Gooning"/>
            <Setter Property="Background" Value="{StaticResource AccentPrimary}"/>
            <Setter Property="Command" Value="{Binding HypnotizeCommand}"/>
            <Setter Property="IsEnabled" Value="{Binding IsHypnotizeEnabled}"/>
                    <Setter Property="ToolTip" Value="Start playback on all assigned screens"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="24,12"/>
            
            <Style.Triggers>
                <!-- Active State (End Training) -->
                <DataTrigger Binding="{Binding HasActivePlayers}" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Content" Value="⏹ End Gooning"/>
                    <Setter Property="Command" Value="{Binding DehypnotizeCommand}"/>
                    <Setter Property="IsEnabled" Value="True"/>
                    <Setter Property="ToolTip" Value="Stop all active playback sessions"/>
                </DataTrigger>
                
                <!-- Hover state for Active -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding HasActivePlayers}" Value="True"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="{StaticResource ErrorColor}"/>
                    <Setter Property="Foreground" Value="White"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border x:Name="MainBorder" 
            Background="{StaticResource BackgroundPrimary}" 
            BorderBrush="{StaticResource AccentPrimary}" 
            BorderThickness="1"
            CornerRadius="8">
        <Grid MouseLeftButtonDown="Window_MouseLeftButtonDown">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}" Value="Maximized">
                            <Setter Property="Margin" Value="{x:Static SystemParameters.WindowResizeBorderThickness}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Header with gradient and rounded corners -->
        <Border x:Name="HeaderBorder" CornerRadius="8,8,0,0" 
                Height="50"
                Grid.Row="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#3D0A1F" Offset="0"/>
                    <GradientStop Color="#3D0A1F" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Title and Icon on Left -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                    <Image Source="pack://application:,,,/Images/icon.ico" Width="20" Height="20" Margin="0,0,10,0">
                        <Image.Effect>
                            <DropShadowEffect Color="#FF69B4" BlurRadius="6" ShadowDepth="0" Opacity="0.4"/>
                        </Image.Effect>
                    </Image>
                    <TextBlock Text="TrainMeX" Foreground="White" FontSize="15" FontWeight="SemiBold" VerticalAlignment="Center" FontFamily="Segoe UI, sans-serif"/>
                </StackPanel>

                <!-- Control Buttons on Right -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,0">
                    <Button Style="{StaticResource ControlButton}" Click="AboutButton_Click" Width="36" Height="50" ToolTip="About TrainMeX" Padding="0">
                        <TextBlock Text="i" FontSize="14" FontWeight="SemiBold" FontFamily="Segoe UI, sans-serif" Foreground="{StaticResource TextSecondary}"/>
                    </Button>
                    <Button Style="{StaticResource ControlButton}" Click="SettingsButton_Click" Width="36" Height="50" ToolTip="Open settings" Padding="0">
                        <Path Data="{StaticResource Icon_Settings}" Stretch="Uniform" Width="16" Height="16"/>
                    </Button>
                    <Button Style="{StaticResource ControlButton}" Command="{Binding MinimizeCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="36" Height="50" ToolTip="Minimize window" Padding="0">
                        <Path Data="{StaticResource Icon_Minimize}" Stretch="Uniform" Width="12" Height="12"/>
                    </Button>
                    <Button x:Name="MaximizeButton" Style="{StaticResource ControlButton}" Click="MaximizeButton_Click" Width="36" Height="50" ToolTip="Maximize/Restore window" Padding="0">
                        <Path Data="{StaticResource Icon_Maximize}" Stretch="Uniform" Width="12" Height="12"/>
                    </Button>
                    <Button Style="{StaticResource ControlButton}" 
                            Command="{Binding ExitCommand}" 
                            Width="44" Height="50" 
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            ToolTip="Exit application"
                            Padding="0">
                        <Path Data="{StaticResource Icon_Close}" Stretch="Uniform" Width="14" Height="14"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content area with padding (excluding title bar) -->
        <Border Padding="24" Grid.Row="1" Grid.RowSpan="11">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
        
        <!-- Title section with better spacing -->
        <StackPanel Margin="0,20,0,24" Grid.Row="0">
            <Label Style="{StaticResource MainTitle}" Margin="0,0,0,10">TrainMeX</Label>
            <Label Style="{StaticResource LowerTitle}" 
                   FontStyle="Italic"
                   FontSize="13"
                   Margin="0,0,0,0">Overlay video player for sissies</Label>
        </StackPanel>
        <Grid Margin="0,0,0,0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="BrowseButton" Grid.Column="0" Margin="0,0,8,0" Style="{StaticResource MainActionButtonStyle}" Command="{Binding BrowseCommand}" ToolTip="Browse and add video files to playlist">
                <StackPanel Orientation="Horizontal">
                    <Path Data="{StaticResource Icon_Folder}" Fill="{StaticResource TextPrimary}" Stretch="Uniform" Width="16" Height="16" Margin="0,0,10,0"/>
                    <TextBlock Text="Browse Videos" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
            <Button x:Name="AddUrlOrPlaylistButton" Grid.Column="1" Margin="8,0,0,0" Style="{StaticResource MainActionButtonStyle}" Command="{Binding AddUrlOrPlaylistCommand}" ToolTip="Add a video URL or import a playlist from supported sites">
                <StackPanel Orientation="Horizontal">
                    <Path Data="{StaticResource Icon_Link}" Fill="{StaticResource TextPrimary}" Stretch="Uniform" Width="16" Height="16" Margin="0,0,10,0"/>
                    <TextBlock Text="Add URL" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
            <!-- Progress indicator overlay -->
            <ProgressBar 
                Grid.ColumnSpan="2"
                Height="4" 
                VerticalAlignment="Bottom" 
                Margin="0,0,0,2"
                IsIndeterminate="True"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                Foreground="{StaticResource AccentPrimary}"
                Background="Transparent"
                BorderThickness="0"/>
        </Grid>
        <Grid Margin="0,24,0,16" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Label Style="{StaticResource LowerTitle}" FontSize="15" FontWeight="SemiBold" Margin="0">Playlist</Label>
                <TextBlock 
                      Foreground="{StaticResource TextSecondary}" 
                      FontSize="12" 
                      VerticalAlignment="Center" 
                      Margin="8,0,0,0"
                      TextAlignment="Left"
                      FontWeight="SemiBold">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="({0} {1})">
                            <Binding Path="AddedFiles.Count"/>
                            <Binding Path="AddedFiles.Count" Converter="{StaticResource PluralConverter}"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Command="{Binding SavePlaylistCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0" Height="36" Padding="16,0" ToolTip="Save current playlist to a file">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource Icon_Save}" Fill="{StaticResource AccentPrimary}" Stretch="Uniform" Width="14" Height="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Save" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{StaticResource AccentPrimary}"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding LoadPlaylistCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0" Height="36" Padding="16,0" ToolTip="Load a playlist from a file">
                    <StackPanel Orientation="Horizontal">
                         <Path Data="{StaticResource Icon_Folder}" Fill="{StaticResource AccentPrimary}" Stretch="Uniform" Width="14" Height="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Load" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{StaticResource AccentPrimary}"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding ClearAllCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,0,0" Height="36" Padding="16,0" ToolTip="Remove all videos from playlist">
                    <StackPanel Orientation="Horizontal">
                         <Path Data="{StaticResource Icon_Trash}" Fill="{StaticResource AccentPrimary}" Stretch="Uniform" Width="14" Height="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Clear" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{StaticResource AccentPrimary}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        
        <Grid Margin="0,0,0,0" Grid.Row="3" MinHeight="200">
            <Border Background="#FF000000" Opacity="0.2" CornerRadius="8" Margin="0"/>
            
            <ListView x:Name="AddedFilesList" 
                      ItemsSource="{Binding AddedFiles}" 
                      SelectionMode="Single" 
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      Background="Transparent"
                      BorderThickness="0"
                      AllowDrop="True"
                      PreviewMouseLeftButtonDown="AddedFilesList_PreviewMouseLeftButtonDown"
                      MouseMove="AddedFilesList_MouseMove"
                      Drop="AddedFilesList_Drop"
                      DragOver="AddedFilesList_DragOver"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling">
                
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource BackgroundSecondary}" CornerRadius="8" Margin="0,8,0,8" Padding="20" UseLayoutRounding="True">
                            <Border.BorderBrush>
                                <SolidColorBrush Color="#FF69B4" Opacity="0.3"/>
                            </Border.BorderBrush>
                            <Border.BorderThickness>1.5</Border.BorderThickness>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#4D0A1F"/>
                                            <Setter Property="BorderBrush">
                                                <Setter.Value>
                                                    <SolidColorBrush Color="#FF69B4" Opacity="0.5"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Header Row -->
                                <Grid Grid.Row="0" Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/> <!-- Icon -->
                                        <ColumnDefinition Width="*"/>    <!-- Title -->
                                        <ColumnDefinition Width="Auto"/> <!-- Screen -->
                                        <ColumnDefinition Width="Auto"/> <!-- Close -->
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Valid Icon -->
                                    <Path Data="M 0 5 L 4 9 L 10 1" 
                                          Stroke="{StaticResource SuccessColor}" 
                                          StrokeThickness="2.5" 
                                          VerticalAlignment="Center" 
                                          Margin="0,0,12,0"/>
                                          
                                    <!-- Title -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding FileName}" 
                                               Foreground="{StaticResource TextPrimary}" 
                                               FontSize="14"
                                               FontWeight="SemiBold" 
                                               TextTrimming="CharacterEllipsis" 
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"
                                               ToolTip="{Binding FilePath}"/>
                                               
                                    <!-- Screen Selector -->
                                    <ComboBox Grid.Column="2" 
                                              ItemsSource="{Binding DataContext.AvailableScreens, RelativeSource={RelativeSource AncestorType=Window}}"
                                              SelectedItem="{Binding AssignedScreen}"
                                              Style="{StaticResource PinkComboBoxStyle}"
                                              Width="220"
                                              Margin="12,0"/>
                                              
                                    <!-- Remove Button -->
                                    <Button Grid.Column="3" 
                                            Style="{StaticResource WindowHeaderCloseButtonStyle}"
                                            Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- Controls Row -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/> <!-- Label -->
                                        <ColumnDefinition Width="*"/>    <!-- Slider -->
                                        <ColumnDefinition Width="Auto"/> <!-- Value -->
                                        <ColumnDefinition Width="20"/>   <!-- Spacer -->
                                        <ColumnDefinition Width="Auto"/> <!-- Label -->
                                        <ColumnDefinition Width="*"/>    <!-- Slider -->
                                        <ColumnDefinition Width="Auto"/> <!-- Value -->
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Opacity -->
                                    <TextBlock Text="Opacity" Foreground="{StaticResource TextSecondary}" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <Slider Grid.Column="1" 
                                            Value="{Binding Opacity, Converter={StaticResource OpacityScaleConverter}}" 
                                            Minimum="0" Maximum="1" 
                                            IsSnapToTickEnabled="True"
                                            TickFrequency="0.1"
                                            TickPlacement="BottomRight"
                                            Style="{StaticResource NeonSliderStyle}" 
                                            VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding Opacity, Converter={StaticResource OpacityToIntConverter}}" 
                                               Foreground="{StaticResource TextPrimary}" 
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center" 
                                               Margin="10,0,0,0" 
                                               Width="35" TextAlignment="Right"/>
                                               
                                    <!-- Volume -->
                                    <TextBlock Grid.Column="4" Text="Volume" Foreground="{StaticResource TextSecondary}" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <Slider Grid.Column="5" 
                                            Value="{Binding Volume}" 
                                            Minimum="0" Maximum="1" 
                                            IsSnapToTickEnabled="True"
                                            TickFrequency="0.1"
                                            TickPlacement="BottomRight"
                                            Style="{StaticResource NeonSliderStyle}" 
                                            VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="6" 
                                               Text="{Binding Volume, StringFormat=P0}" 
                                               Foreground="{StaticResource TextPrimary}" 
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center" 
                                               Margin="10,0,0,0" 
                                               Width="35" TextAlignment="Right"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            
            <Grid IsHitTestVisible="False">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasItems, ElementName=AddedFilesList}" Value="False">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Path Data="{StaticResource Icon_Folder}" Fill="{StaticResource AccentSecondary}" Stretch="Uniform" Width="72" Height="72" Opacity="0.4" Margin="0,0,0,24">
                        <Path.Effect>
                            <DropShadowEffect Color="#FF69B4" BlurRadius="12" ShadowDepth="0" Opacity="0.3"/>
                        </Path.Effect>
                    </Path>
                    <TextBlock Text="Drag &amp; Drop videos here" 
                               Foreground="{StaticResource TextPrimary}" 
                               HorizontalAlignment="Center" 
                               TextAlignment="Center" 
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="or click Browse to add files, or Add URL for online videos and playlists" 
                               Foreground="{StaticResource TextSecondary}" 
                               HorizontalAlignment="Center" 
                               TextAlignment="Center" 
                               FontSize="13"
                               FontStyle="Italic"
                               Margin="0,0,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Status Message Area - Hidden -->
        <Border x:Name="StatusBorder" 
                Background="{Binding StatusMessageType, Converter={StaticResource StatusMessageTypeToBrushConverter}}" 
                CornerRadius="8" 
                Margin="0,12,0,0" 
                Padding="16,10" 
                MinHeight="20" 
                BorderThickness="1.5"
                BorderBrush="{Binding StatusMessageType, Converter={StaticResource StatusMessageTypeToBrushConverter}}"
                Visibility="Collapsed"
                HorizontalAlignment="Left"
                Grid.Row="5">
            <TextBlock Text="{Binding StatusMessage}" 
                      Foreground="{Binding StatusMessageType, Converter={StaticResource StatusMessageTypeToForegroundConverter}}" 
                      FontSize="12" 
                      TextAlignment="Left"
                      TextWrapping="Wrap"
                      FontWeight="SemiBold"
                      LineHeight="1.4"/>
        </Border>
        
        <Grid HorizontalAlignment="Center" Grid.Row="6" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Style="{StaticResource LowerTitle}" FontSize="14" FontWeight="SemiBold" Margin="0,0,16,0">Shuffle</Label>
            <CheckBox x:Name="ShuffleCheckBox" IsChecked="{Binding Shuffle}" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" ToolTip="Randomize video playback order"></CheckBox>
        </Grid>
        <Button x:Name="TrainingToggleButton" 
                Style="{StaticResource TrainingToggleButtonStyle}"
                CommandParameter="{Binding ElementName=AddedFilesList, Path=SelectedItems}" 
                Margin="0,20,0,0"
                Grid.Row="9">
            <Button.Effect>
                <DropShadowEffect Color="#FF69B4" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
            </Button.Effect>
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Loaded">
                    <BeginStoryboard Name="PulsingGlow" Storyboard="{StaticResource PulsingGlowStoryboard}"/>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <!-- Active Playback Controls -->
        <StackPanel Grid.Row="7" Margin="0,16,0,0" Visibility="{Binding HasActivePlayers, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Label Style="{StaticResource LowerTitle}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5">Currently Playing</Label>
            <ItemsControl ItemsSource="{Binding ActivePlayers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,8" CornerRadius="8" BorderBrush="{StaticResource AccentPrimary}" BorderThickness="1.5" UseLayoutRounding="True" SnapsToDevicePixels="True">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#1A0510" Offset="0"/>
                                    <GradientStop Color="#0A0005" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#FF69B4" BlurRadius="8" ShadowDepth="0" Opacity="0.2"/>
                            </Border.Effect>
                            <StackPanel Margin="16,12,16,12">
                                <Grid Margin="0,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding ScreenName}" VerticalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"
                                               FontSize="12" TextTrimming="CharacterEllipsis" Margin="0,0,10,0"/>

                                    <Button Grid.Column="1" Command="{Binding TogglePlayPauseCommand}" 
                                            Style="{StaticResource ActivePlayerButtonStyle}" ToolTip="Play/Pause">
                                        <Grid>
                                            <Path Data="{StaticResource Icon_Play}" Fill="{StaticResource AccentPrimary}" Stretch="Uniform" Width="14" Height="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Button>
                                    <Button Grid.Column="2" Command="{Binding SkipCommand}" 
                                            Style="{StaticResource ActivePlayerButtonStyle}" ToolTip="Skip Video">
                                        <Grid>
                                            <Path Data="{StaticResource Icon_Next}" Fill="{StaticResource AccentPrimary}" Stretch="Uniform" Width="14" Height="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Button>
                                </Grid>
                                
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>


            <!-- Busy Indicator Overlay -->
            <Grid Grid.Row="0" Grid.RowSpan="11" Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" IsHitTestVisible="True" Panel.ZIndex="1000">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid Width="60" Height="60">
                       <Grid.Resources>
                            <Storyboard x:Key="SpinnerStoryboard" RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetName="SpinnerTransform" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:1.5"/>
                            </Storyboard>
                        </Grid.Resources>
                        <Grid.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard Storyboard="{StaticResource SpinnerStoryboard}"/>
                            </EventTrigger>
                        </Grid.Triggers>
                         <Path Data="M 30,0 A 30,30 0 0 1 60,30" Stroke="{StaticResource AccentPrimary}" StrokeThickness="5" RenderTransformOrigin="0.5,0.5">
                             <Path.RenderTransform>
                                <RotateTransform x:Name="SpinnerTransform"/>
                             </Path.RenderTransform>
                         </Path>
                         <Path Data="M 60,30 A 30,30 0 0 1 30,60" Stroke="{StaticResource TextSecondary}" StrokeThickness="5" Opacity="0.3" RenderTransformOrigin="0.5,0.5">
                              <Path.RenderTransform>
                                <RotateTransform Angle="0"/>
                             </Path.RenderTransform>
                         </Path>
                    </Grid>
                    <TextBlock Text="Please wait..." Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center" Margin="0,15,0,0" FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
            </Grid>
        </Border>
        </Grid>
    </Border>

</Window>
