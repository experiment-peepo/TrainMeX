<Window x:Class="TrainMeX.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainMeX.Windows"
        xmlns:vm="clr-namespace:TrainMeX.ViewModels"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Settings" SizeToContent="Height" Width="480"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True" Background="Transparent"
        Icon="pack://application:,,,/Images/icon.ico"
        ShowInTaskbar="False">
    <Window.Resources>
        <local:OpacityToIntConverter x:Key="OpacityToIntConverter"/>
        <local:OpacityScaleConverter x:Key="OpacityScaleConverter"/>
        <x:Array x:Key="KeyList" Type="sys:String">
            <sys:String>End</sys:String>
            <sys:String>Esc</sys:String>
            <sys:String>Space</sys:String>
            <sys:String>F1</sys:String>
            <sys:String>F2</sys:String>
            <sys:String>F3</sys:String>
            <sys:String>F4</sys:String>
            <sys:String>F5</sys:String>
            <sys:String>F6</sys:String>
            <sys:String>F7</sys:String>
            <sys:String>F8</sys:String>
            <sys:String>F9</sys:String>
            <sys:String>F10</sys:String>
            <sys:String>F11</sys:String>
            <sys:String>F12</sys:String>
            <sys:String>Delete</sys:String>
            <sys:String>Insert</sys:String>
            <sys:String>Home</sys:String>
            <sys:String>PageUp</sys:String>
            <sys:String>PageDown</sys:String>
            <sys:String>NumPad0</sys:String>
            <sys:String>NumPad1</sys:String>
            <sys:String>NumPad2</sys:String>
            <sys:String>NumPad3</sys:String>
            <sys:String>NumPad4</sys:String>
            <sys:String>NumPad5</sys:String>
            <sys:String>NumPad6</sys:String>
            <sys:String>NumPad7</sys:String>
            <sys:String>NumPad8</sys:String>
            <sys:String>NumPad9</sys:String>
        </x:Array>

        <!-- Modern Collapsible Section Style -->
        <Style x:Key="SettingsExpanderStyle" TargetType="{x:Type Expander}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Expander}">
                        <Grid Margin="0,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition x:Name="ContentRow" Height="0"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <ToggleButton x:Name="HeaderSite"
                                          Background="{TemplateBinding Background}"
                                          BorderThickness="0"
                                          Content="{TemplateBinding Header}"
                                          IsChecked="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Padding="0,15"
                                          Cursor="Hand">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                        <Border Background="{TemplateBinding Background}" IsHitTestVisible="True">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <ContentPresenter Content="{TemplateBinding Content}"
                                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                                  VerticalAlignment="Center"
                                                                  Margin="0">
                                                    <ContentPresenter.Resources>
                                                        <Style TargetType="{x:Type TextBlock}">
                                                            <Setter Property="FontSize" Value="16"/>
                                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                                            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                        </Style>
                                                    </ContentPresenter.Resources>
                                                </ContentPresenter>
                                                
                                                <Path x:Name="Arrow"
                                                      Grid.Column="1"
                                                      Data="M 1,1 L 7,7 L 13,1"
                                                      Stroke="{StaticResource TextSecondary}"
                                                      StrokeThickness="2"
                                                      VerticalAlignment="Center"
                                                      Margin="10,0,5,0"
                                                      RenderTransformOrigin="0.5,0.5">
                                                    <Path.RenderTransform>
                                                        <RotateTransform Angle="0"/>
                                                    </Path.RenderTransform>
                                                </Path>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="Arrow" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <RotateTransform Angle="180"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Arrow" Property="Stroke" Value="{StaticResource AccentPrimary}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            
                            <Border x:Name="ExpandSite"
                                    Grid.Row="1"
                                    Visibility="Collapsed"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    Padding="10,10,10,20">
                                <ContentPresenter/>
                            </Border>
                            
                            <Border Grid.Row="2" 
                                    Height="1" 
                                    Background="#22FFFFFF" 
                                    Margin="0,5,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="ExpandSite" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentRow" Property="Height" Value="*"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border x:Name="MainBorder" 
            Background="{StaticResource BackgroundPrimary}" 
            BorderBrush="{StaticResource AccentPrimary}" 
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with modernized title and subtitle -->
            <Grid Grid.Row="0" Margin="20,20,20,10" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Settings" Style="{StaticResource WindowHeaderTitleStyle}"/>
                    <TextBlock Text="Configure your TrainMeX preferences and playback options" Style="{StaticResource WindowHeaderSubtitleStyle}"/>
                </StackPanel>
                <Button Style="{StaticResource ControlButton}" 
                        Click="CloseButton_Click" 
                        ToolTip="Close settings"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="30" Height="30"
                        Background="Transparent"
                        Foreground="{StaticResource TextSecondary}">
                    <Path Data="{StaticResource Icon_Close}" Fill="{StaticResource TextSecondary}" Stretch="Uniform" Width="12" Height="12"/>
                </Button>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10,10,10,0" Padding="0,0,10,0">
                <StackPanel>
                    <!-- General Settings -->
                    <Expander Header="General" Style="{StaticResource SettingsExpanderStyle}" IsExpanded="{Binding IsGeneralExpanded}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <!-- Default Monitor -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center">
                                <Label Content="Default Monitor" Foreground="{StaticResource TextPrimary}" FontSize="13" Padding="0"/>
                                <TextBlock Text="Monitor used by default for new videos" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="0,2,0,0"/>
                            </StackPanel>
                            <ComboBox Grid.Column="1" Width="180"
                                      ItemsSource="{Binding AvailableMonitors}"
                                      SelectedItem="{Binding SelectedDefaultMonitor}"
                                      Style="{StaticResource PinkComboBoxStyle}"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </Expander>

                    <!-- Playback Settings -->
                    <Expander Header="Playback" Style="{StaticResource SettingsExpanderStyle}" IsExpanded="{Binding IsPlaybackExpanded}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
 
                            <!-- Default Opacity -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15" VerticalAlignment="Center">
                                <Label Content="Default Opacity" Foreground="{StaticResource TextPrimary}" FontSize="13" Padding="0"/>
                                <TextBlock Text="Initial opacity level for new videos" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="0,2,0,0"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,15">
                                <Slider Width="120" Value="{Binding DefaultOpacity, Converter={StaticResource OpacityScaleConverter}}"
                                        Minimum="0" Maximum="1.0" SmallChange="0.1" LargeChange="0.1" TickFrequency="0.1"
                                        TickPlacement="BottomRight"
                                        Style="{StaticResource NeonSliderStyle}" IsSnapToTickEnabled="True"/>
                                <TextBlock Text="{Binding DefaultOpacity, Converter={StaticResource OpacityToIntConverter}}" 
                                           Foreground="{StaticResource TextSecondary}" FontSize="12" Width="30" TextAlignment="Right" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
 
                            <!-- Default Volume -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,15" VerticalAlignment="Center">
                                <Label Content="Default Volume" Foreground="{StaticResource TextPrimary}" FontSize="13" Padding="0"/>
                                <TextBlock Text="Initial volume level for new videos" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="0,2,0,0"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,15">
                                <Slider Width="120" Value="{Binding DefaultVolume}"
                                        Minimum="0" Maximum="1" SmallChange="0.1" LargeChange="0.1" TickFrequency="0.1"
                                        TickPlacement="BottomRight"
                                        Style="{StaticResource NeonSliderStyle}" IsSnapToTickEnabled="True"/>
                                <TextBlock Text="{Binding DefaultVolume, StringFormat='{}{0:P0}'}" 
                                           Foreground="{StaticResource TextSecondary}" FontSize="12" Width="30" TextAlignment="Right" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
 
                            <!-- Opaque Mode -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center">
                                <Label Content="Opaque Mode" Foreground="{StaticResource TextPrimary}" FontSize="13" Padding="0"/>
                                <TextBlock Text="Force videos to be fully opaque" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="0,2,0,0"/>
                            </StackPanel>
                            <CheckBox Grid.Row="2" Grid.Column="1" 
                                      IsChecked="{Binding AlwaysOpaque}"
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </Expander>

                    <!-- Application Settings -->
                    <Expander Header="Application" Style="{StaticResource SettingsExpanderStyle}" IsExpanded="{Binding IsApplicationExpanded}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
 
                            <!-- Always on Top -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15" VerticalAlignment="Center">
                                <Label Content="Always on Top (Launcher)" Foreground="{StaticResource TextPrimary}" FontSize="13" Padding="0"/>
                                <TextBlock Text="Keep the launcher window above others" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="0,2,0,0"/>
                            </StackPanel>
                            <CheckBox Grid.Row="0" Grid.Column="1" 
                                      IsChecked="{Binding LauncherAlwaysOnTop}"
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      VerticalAlignment="Center"
                                      Margin="0,0,0,15"/>
                            
                            <!-- HotScreen Integration -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,15" VerticalAlignment="Center">
                                <Label Content="HotScreen Integration" Foreground="{StaticResource TextPrimary}" FontSize="13" Padding="0"/>
                                <TextBlock Text="Sync window positions for accurate censoring" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="0,2,0,0"/>
                            </StackPanel>
                            <CheckBox Grid.Row="1" Grid.Column="1" 
                                      IsChecked="{Binding EnableHotScreenIntegration}"
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      VerticalAlignment="Center"
                                      Margin="0,0,0,15"/>
                            
                            <!-- Calibration Button -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center">
                                <Label Content="HotScreen Calibration" Foreground="{StaticResource TextPrimary}" FontSize="13" Padding="0"/>
                                <TextBlock Text="Show calibration pattern for auto-alignment" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="0,2,0,0"/>
                            </StackPanel>
                            <Button Grid.Row="2" Grid.Column="1"
                                    Content="Show Calibration Pattern"
                                    Click="ShowCalibrationButton_Click"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    VerticalAlignment="Center"
                                    Padding="10,5"/>
                        </Grid>
                    </Expander>

                    <!-- Hotkeys -->
                    <Expander Header="Hotkeys" Style="{StaticResource SettingsExpanderStyle}" IsExpanded="{Binding IsHotkeysExpanded}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                <Label Content="Panic Hotkey" Foreground="{StaticResource TextPrimary}" FontSize="13" Padding="0"/>
                                <TextBlock Text="Global hotkey to stop all playback immediately" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="0,2,0,0"/>
                            </StackPanel>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                                    <CheckBox Content="Ctrl" IsChecked="{Binding PanicHotkeyCtrl}" Style="{StaticResource ModernCheckBoxStyle}" FontSize="12" Margin="0,0,10,0" Foreground="{StaticResource TextPrimary}"/>
                                    <CheckBox Content="Shift" IsChecked="{Binding PanicHotkeyShift}" Style="{StaticResource ModernCheckBoxStyle}" FontSize="12" Margin="0,0,10,0" Foreground="{StaticResource TextPrimary}"/>
                                    <CheckBox Content="Alt" IsChecked="{Binding PanicHotkeyAlt}" Style="{StaticResource ModernCheckBoxStyle}" FontSize="12" Margin="0,0,10,0" Foreground="{StaticResource TextPrimary}"/>
                                </StackPanel>
                                <TextBlock Text="+" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource TextSecondary}" Margin="5,0"/>
                                <ComboBox Grid.Column="2" Width="100" ItemsSource="{StaticResource KeyList}" SelectedItem="{Binding PanicHotkeyKey}" Style="{StaticResource PinkComboBoxStyle}"/>
                            </Grid>
                        </Grid>
                    </Expander>

                    <!-- History Settings -->
                    <Expander Header="History" Style="{StaticResource SettingsExpanderStyle}" IsExpanded="{Binding IsHistoryExpanded}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
 
                            <!-- Remember Last Playlist -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15" VerticalAlignment="Center">
                                <Label Content="Remember last playlist" Foreground="{StaticResource TextPrimary}" FontSize="13" Padding="0"/>
                                <TextBlock Text="Restore your list when reopening the app" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="0,2,0,0"/>
                            </StackPanel>
                            <CheckBox Grid.Row="0" Grid.Column="1" 
                                      IsChecked="{Binding RememberLastPlaylist}"
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      VerticalAlignment="Center"
                                      Margin="0,0,0,15"/>
 
                            <!-- Remember File Position -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,15" VerticalAlignment="Center">
                                <Label Content="Remember file position" Foreground="{StaticResource TextPrimary}" FontSize="13" Padding="0"/>
                                <TextBlock Text="Resume videos from where you left off" Foreground="{StaticResource TextTertiary}" FontSize="11" Margin="0,2,0,0"/>
                            </StackPanel>
                            <CheckBox Grid.Row="1" Grid.Column="1" 
                                      IsChecked="{Binding RememberFilePosition}"
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      VerticalAlignment="Center"
                                      Margin="0,0,0,15"/>
 
                            <!-- Reset Positions Button -->
                            <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                    Command="{Binding ResetPositionsCommand}"
                                    Style="{StaticResource DangerButtonStyle}"
                                    Height="32" Padding="10,0"
                                    HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal">
                                    <Path Data="{StaticResource Icon_Trash}" Fill="White" Stretch="Uniform" Width="14" Height="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="Reset All Saved Positions" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Expander>
                </StackPanel>
            </ScrollViewer>

            <!-- Fixed Footer with Buttons -->
            <Grid Grid.Row="2" Margin="20,12,20,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Command="{Binding CancelCommand}" 
                            Style="{StaticResource SecondaryButtonStyle}" 
                            Width="100" 
                            Height="38"
                            Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource Icon_Close}" Fill="{StaticResource AccentPrimary}" Stretch="Uniform" Width="10" Height="10" Margin="0,0,8,0"/>
                            <TextBlock Text="Cancel" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding OkCommand}" 
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Width="150" 
                            Height="38">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource Icon_Save}" Fill="White" Stretch="Uniform" Width="14" Height="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Save Changes" VerticalAlignment="Center" FontWeight="Bold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>


    </Grid>
    </Border>
</Window>
