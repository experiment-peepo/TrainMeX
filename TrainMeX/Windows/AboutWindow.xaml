<Window x:Class="TrainMeX.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainMeX.Windows"
        mc:Ignorable="d"
        Title="About" SizeToContent="Height" Width="420"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True" Background="Transparent"
        Icon="pack://application:,,,/Images/icon.ico"
        ShowInTaskbar="False">
    
    <Border x:Name="MainBorder" 
            Background="{StaticResource BackgroundPrimary}" 
            BorderBrush="{StaticResource AccentPrimary}" 
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with modernized title and subtitle -->
            <Grid Grid.Row="0" Margin="20,20,20,10" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="About" Style="{StaticResource WindowHeaderTitleStyle}"/>
                    <TextBlock Text="Information about TrainMeX and the developer" Style="{StaticResource WindowHeaderSubtitleStyle}"/>
                </StackPanel>
                <Button Style="{StaticResource ControlButton}" 
                        Click="CloseButton_Click" 
                        ToolTip="Close"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="30" Height="30"
                        Background="Transparent"
                        Foreground="{StaticResource TextSecondary}">
                    <Path Data="{StaticResource Icon_Close}" Fill="{StaticResource TextSecondary}" Stretch="Uniform" Width="12" Height="12"/>
                </Button>
            </Grid>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="24,12,24,24">
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="TrainMeX" FontSize="28" FontWeight="Bold" Foreground="{StaticResource AccentPrimary}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Overlay video player for sissies" FontSize="14" FontStyle="Italic" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    <TextBlock x:Name="VersionText" 
                               HorizontalAlignment="Center" 
                               Foreground="{StaticResource TextTertiary}" 
                               Margin="0,10,0,0" 
                               FontSize="12"/>
                </StackPanel>

                <TextBlock Text="TrainMeX is a premium specialized video player designed for multi-monitor playback with high-performance overlay capabilities directly on your desktop." 
                           Foreground="{StaticResource TextSecondary}" 
                           TextWrapping="Wrap" 
                           TextAlignment="Center"
                           FontSize="14"
                           LineHeight="20"
                           Margin="0,0,0,30"/>

                <!-- Ko-fi Button -->
                <Button Command="{Binding OpenKoFiCommand}" 
                        Background="Transparent" BorderBrush="Transparent"
                        HorizontalAlignment="Center"
                        Cursor="Hand" ToolTip="Support on Ko-fi">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                             <Grid>
                                <ContentPresenter/>
                                <Border Background="Transparent"/> 
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="pack://application:,,,/Images/kofi.png" Height="42" RenderOptions.BitmapScalingMode="HighQuality">
                        <Image.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="2" Opacity="0.4"/>
                        </Image.Effect>
                    </Image>
                </Button>
                
                <TextBlock Text="Support the development" 
                           Foreground="{StaticResource TextTertiary}" 
                           FontSize="11" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0"
                           FontStyle="Italic"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
