<Window x:Class="TrainMeX.Windows.InputDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainMeX.Windows"
        mc:Ignorable="d"
        Title="{Binding DialogTitle}" Width="520" 
        SizeToContent="Height" MinHeight="220"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True" Background="Transparent"
        Icon="pack://application:,,,/Images/icon.ico"
        ShowInTaskbar="False">
    <Border x:Name="MainBorder" 
            Background="{StaticResource BackgroundPrimary}" 
            BorderBrush="{StaticResource AccentPrimary}" 
            BorderThickness="1.5"
            CornerRadius="12">
        <Grid Background="{StaticResource BackgroundPrimary}">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header with gradient and rounded corners -->
            <Border x:Name="HeaderBorder" CornerRadius="12,12,0,0" 
                    Height="50"
                    Grid.Row="0"
                    Background="{StaticResource HeaderGradientBrush}">
                <Grid FlowDirection="RightToLeft" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Style="{StaticResource ControlButton}" Click="CancelButton_Click" ToolTip="Cancel">x</Button>
                    <Label Grid.Column="1" Style="{StaticResource LowerTitle}" 
                           HorizontalAlignment="Left" 
                           Margin="10,0,0,0" 
                           VerticalAlignment="Center"
                           Content="{Binding DialogTitle}"/>
                </Grid>
            </Border>
            
            <!-- Content Area -->
            <StackPanel Margin="20" Grid.Row="1">
                <Label Content="{Binding LabelText}" 
                       Foreground="{StaticResource TextPrimary}" 
                       FontWeight="SemiBold" 
                       FontSize="13"
                       Margin="0,0,0,12"/>
                <TextBox x:Name="InputTextBox"
                         Style="{StaticResource PinkTextBoxStyle}"
                         Text="{Binding InputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Height="50"
                         VerticalContentAlignment="Center"
                         Margin="0,0,0,5"
                         KeyDown="InputTextBox_KeyDown"
                         ToolTip="Enter video filename or URL"/>
            </StackPanel>
            
            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       Margin="20,0,20,20" 
                       Grid.Row="2">
                <Button x:Name="OkButton" 
                        Click="OkButton_Click"
                        Margin="5,0" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        FontSize="12"
                        Padding="20,8"
                        ToolTip="OK">
                    OK
                </Button>
                <Button x:Name="CancelButton" 
                        Click="CancelButton_Click"
                        Margin="5,0" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        FontSize="12"
                        Padding="20,8"
                        ToolTip="Cancel">
                    Cancel
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

