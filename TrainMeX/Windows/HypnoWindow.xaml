<Window x:Class="TrainMeX.Windows.HypnoWindow"
        x:Name="WindowRoot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainMeX.Windows"
        mc:Ignorable="d"
        Title="TrainMeX Hypnosis Video Player" Height="450" Width="800"
        WindowStyle="None" WindowState="Normal" Topmost="True"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        Background="{x:Null}"
        AllowsTransparency="True"
        Opacity="{Binding Opacity}" 
        Icon="pack://application:,,,/Images/icon.ico"
        SourceInitialized="Window_SourceInitialized">
    <Grid>
        <MediaElement 
            IsHitTestVisible="False"
            x:Name="FirstVideo"
            Source="{Binding CurrentSource}"
            Stretch="Uniform"
            LoadedBehavior="Manual"
            UnloadedBehavior="Manual"
            MediaEnded="FirstVideo_MediaEnded"
            MediaFailed="FirstVideo_MediaFailed"
            MediaOpened="FirstVideo_MediaOpened"
            Volume="{Binding Volume}"
            ScrubbingEnabled="False"
            RenderOptions.BitmapScalingMode="HighQuality">
            <MediaElement.Effect>
                <!-- Placeholder for TabooCorruptionEffect, assigned in code-behind -->
                <BlurEffect Radius="0"/> 
            </MediaElement.Effect>
        </MediaElement>

        <!-- Tint Overlay (Immersion) -->
        <Border x:Name="TintOverlay" Background="Transparent" IsHitTestVisible="False"/>

        <!-- Controls Removed as per user request -->
    </Grid>
</Window>
